<header>
   <style>
      background: <%= image_tag('BlueBackground.png') %>
  </style>
  <div class="container">


    <%= image_tag("Judes Banner.png", :alt => "Judes App") %>

    <div class="container" style="width: 100%; height: 100%; background-color: white;" class="round">

        <% if not current_user.nil? %>
            <b>Welcome <%= current_user_logged_in %>:</b>
        <% else %>
            <b> </b><br>
        <% end %>

        <table id="navigation1">

          <% if not current_user.nil? %>

              <th align="left"><%= link_to "Users", users_path %></th>
              <th align="center"><%= link_to "Players", players_path %></th>
              <th align="center"><%= link_to "Training Events", training_events_path %></th>
              <th align="center"><%= link_to "Attendance", attends_path %></th>
              <th align="center"><%= link_to "My Profile", current_user %></th>
              <th align="center"><%= link_to "Sitemap", sitemaps_path %></th>
              <th align="right"><%= link_to "Sign-Out", logout_path, :method => :delete %></th>
          <% else %>
              <th align="center"><%= link_to "Sign-In", login_path %></th>
          <% end %>
        </table>

    </div>
  </div>
</header>

